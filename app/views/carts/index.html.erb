<div class="row">
  <div class="col-md-12">
    <h2>购物车</h2>
    <table class="table">
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.product.image.present? %>
            <%=  image_tag(cart_item.product.image_url(:thumb)) %>
          <% else %>
            <%= image_tag("nopic-thumb.jpg") %>
            <% end %>
          </td>
          <td><%= cart_item.product.price %></td>
          <td><%= cart_item.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">总计<%= render_cart_total_price(current_cart) %>RMB
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("确认结账", "#", method: :post, class:"btn btn-danger btn-lg pull-right") %>
    </div>

  </div>
</div>
